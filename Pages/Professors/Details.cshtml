@page
@model lab11_solution.Pages.Professors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Professor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Professor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Professor.LastName)
        </dd>
        <!-- Round 3: Loop through each course and display it -->
        @foreach (var c in Model.Professor.Courses)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Professor.Courses)
            </dt>
            <dd class="col-sm-1">
                @Html.DisplayFor(model => c.Description)
            </dd>
            <!-- Form with button to delete each course -->
            <dt class="col-sm-9">
                <form method="post">
                    <input type="hidden" asp-for="CourseIdToDelete" value="@c.CourseId" />
                    <input type="submit" asp-page-handler="DeleteCourse" asp-route-id="@Model.Professor.ProfessorId" value="Delete Course" class="btn btn-danger btn-sm" />
                </form>
            </dt>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Professor.ProfessorId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
